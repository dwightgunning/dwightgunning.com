---
import '../styles/tailwindBase.css';

export interface Props {
  bodyClass?: string;
  windowTitle: string;
  metaTitle: string;
  metaDescription: string;
  canonicalHref?: string;
  metaAuthor?: string;
  noIndex?: boolean;
}

const { bodyClass, windowTitle, metaAuthor, metaTitle, metaDescription, canonicalHref, noIndex } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    {canonicalHref && <link rel="canonical" href={canonicalHref} />}
    {noIndex && <meta name="robots" content="noindex" />}

    <meta name="title" content={metaTitle} />
    <meta name="description" content={metaDescription} />
    <meta name="author" content={metaAuthor || 'Dwight Gunning'} />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{windowTitle}</title>
    
    <script defer data-domain="dwightgunning.com" src="https://plausible.io/js/script.js"></script>
  </head>
  <body class={`sm:overflow-y-scroll px-2 pt-2 pb-4 ${bodyClass}`}>
    <slot />
  </body>
</html>
