---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta name="title" content="Dwight Gunning" />
    <meta name="description" content="Software | Product | Technical Leadership" />
    <meta name="author" content="Dwight Gunning" />

    <meta property="og:url" content="http://www.dwightgunning.com" />
    <meta property="og:description" content="Software | Product | Technical Leadership" />
    <meta property="og:title" content="Dwight Gunning" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="profile" />
    <meta property="profile:first_name" content="Dwight" />
    <meta property="profile:last_name" content="Gunning" />
    <meta property="profile:username" content="dwightgunning" />
    <meta property="og:image" content="/dwight.jpg" />
    <meta property="og:image:width" content="255" />
    <meta property="og:image:height" content="255" />
    <meta property="og:site_name" content="Dwight Gunning" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-pampas-200 p-2 pb-4 sm:pb:2 flex sm:h-screen justify-center max-w-screen-md m-auto text-armadillo">
    <div class="grid grid-cols-1">
      <main class="grid grid-cols-2 sm:gap-4 md:gap-8 content-center justify-center sm:justify-left">
        <slot />
      </main>
      <footer class="grid justify-center">
        <div class="text-armadillo-400 text-sm font-light">
          Copyright Â© 2005-22. <a
            class="underline text-armadillo-400 outline-offset-4 focus-visible:outline-armadillo-400 focus:outline-armadillo-400"
            href="/">Dwight Gunning</a
          >.
        </div>
      </footer>
    </div>
  </body>
</html>
